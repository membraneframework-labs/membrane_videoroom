<div class="p-8 flex flex-col items-center">
    <div class="mb-4">
      <img src="/svg/logo.svg" class="mb-2" />
      <h2 class="font-rocGrotesk font-medium text-4xl text-white mb-2 ">Videoroom</h2>
    </div>
    <form id="form" method="post" class="bg-white shadow-md rounded max-w-md px-8 pt-6 pb-8 mb-4">
      <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="room_name">
          Room name
        </label>
        <input
          type="text"
          required
          name="room_name"
          value={@room_id}
          placeholder="Room name"
          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
        />
      </div>
      <div class="mb-6">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="display_name">
          Display name
        </label>
        <input requried class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" name="display_name" type="text" placeholder="Display name">
      </div>
      <div hidden={!@simulcast} class="form-check mb-6">
        <label class="form-check-label text-gray-700 text-sm font-bold" for="simulcast">
          Simulcast
        </label>
        <input checked={@simulcast} class="form-check-input" type="checkbox" value="true" id="simulcast" name="simulcast">
      </div>
      <div class="flex items-center justify-between">
        <button class="w-full bg-membraneLight hover:bg-membraneLight/75 focus:ring ring-membraneDark focus:border-membraneDark text-membraneDark font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
          Join room!
        </button>
      </div>
  </form>
</div>

<script>
  // when form gets submitted save the display name to local storage so it is available on refresh
  document.getElementById("form").addEventListener("submit", () => {
    const displayName = document.querySelector("[name='display_name").value;
    localStorage.setItem("displayName", displayName);
    document.getElementById("form").submit();
  });

  // load the display name from local storage
  document.querySelector("[name='display_name").value = localStorage.getItem("displayName") || "";
</script>
