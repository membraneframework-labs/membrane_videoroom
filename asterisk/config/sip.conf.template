[general]
# context=unauthenticated
context=default
allowoverlap=no
bindport=5061
bindaddr=0.0.0.0
localnet=$LOCAL_NET    # using placeholder here
externip=$EXTERNAL_IP   # using placeholder here
allowexternaldomains=yes
srvlookup=yes
transport=udp

[mymediaserver0]
type=friend
host=dynamic
username=mymediaserver0
secret=yourpassword
context=outgoing_calls0
disallow=all
allow=alaw      ; allow ulaw codec

[mymediaserver1]
type=friend
host=dynamic
username=mymediaserver1
secret=yourpassword
context=outgoing_calls1
disallow=all
allow=alaw      ; allow ulaw codec